@model ECommerce.Models.Cinema

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Cinema</h1>

<div class="container">
<div class="row justify-content-center">
    <div class="col-md-4">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group mt-3 text-center">
            <img id="profilepictureURLId" style="width:390px;height:250px; display: none;" />
        </div>
        <form asp-action="Edit" asp-controller="Cinemas" method="post">
            <div class="form-group mt-1">
                <label asp-for="Logo" class="control-label"></label>
                <input asp-for="Logo" id="Logo" class="form-control" />
                <span asp-validation-for="Logo" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="d-flex justify-content-between mt-3">

                <div>
                    <button class="btn btn-outline-warning" type="submit">Edit</button>
                </div>
                <div class="form-group">
                    <a class="btn btn-outline-primary" asp-action="Index">Cancel </a>
                </div>
            </div>

        </form>

    </div>
</div>
</div>

@section Scripts {
    <script>
        // Function to show image if URL is set
        function showImageIfURLSet() {
            var imageUrl = $("#Logo").val();
            if (imageUrl) {
                $("#profilepictureURLId").attr("src", imageUrl).show();
            } else {
                $("#profilepictureURLId").hide();
            }
        }

        // Call the function on page load
        $(document).ready(function () {
            showImageIfURLSet();
        });

        // Bind change event to the input field
        $("#Logo").on("change", showImageIfURLSet);
    </script>
}
