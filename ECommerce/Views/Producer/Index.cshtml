@model IEnumerable<Producer>

@{
    ViewData["Title"] = "Index";
}


<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
<!-- Bootstrap Icons CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
<h3>List of Producer</h3>

<div class="row d-flex" style="justify-content:center">
    <div class="col-md-10 offest-md-2 ">

        <table class="table table-border table-hover ">
            <tr>
                <th>Profilr Picture</th>
                <th>Full Name</th>
                <th>Bio</th>
                <th></th>
                <th></th>

            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="align-middle"><img src="@item.profilepictureURL" /></td>
                    <td class="align-middle">@item.FullName</td>
                    <td class="align-middle">@item.Bio</td>
                    <td class="align-middle">
                        <div class="d-flex" style="flex-wrap:nowrap;justify-content:space-around">
                            <a class="btn btn-outline-warning"><i class="bi bi-pencil-square"></i> Edit</a>
                            <a class="btn btn-outline-primary"><i class="bi bi-eye"></i>Details</a>
                            <a class="btn btn-outline-danger"><i class="bi bi-trash"></i>Delete</a>
                        </div>
                    </td>

                    <td></td>
                </tr>
            }
        </table>

    </div>

</div>
