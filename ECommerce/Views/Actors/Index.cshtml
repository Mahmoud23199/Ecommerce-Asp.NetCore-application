
@model List<Actor> 
@{
    ViewData["Title"] = "Actors";
}

<h1>All Actors</h1>

<div class="container-fluid" style="position:relative;min-height:80vh">
    <div class="row d-flex justify-content-center">
        <div class="col-md-8 offest-md-4">
            <table class="table table-border table-hover">
                <tr>
                    <th>Profilr Picture</th>
                    <th>Full Name</th>
                    <th>Bio</th>
                    <th>Actions</th>

                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img src="@item.profilepictureURL" class="img-fluid rounded-circle" style="max-width: 120px; height: 120px;" alt="Profile Picture">
                        </td>
                        <td class="align-middle">@item.FullName</td>
                        <td class="align-middle" style="max-width:350px">@item.Bio</td>
                        <td class="align-middle">
                            <div class="d-flex" style="flex-wrap:wrap;justify-content:space-around">
                                <a class="btn btn-outline-warning mt-2 mt-md-0 mt-lg-0 " asp-controller="Actors" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i> Edit</a>
                                <a class="btn btn-outline-primary mt-2 mt-md-0 mt-lg-0" asp-controller="Actors" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye"></i>Details</a>
                                <a class="btn btn-outline-danger mt-2 mt-md-0 mt-lg-0" asp-controller="Actors" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i>Delete</a>
                            </div>
                        </td>
                    </tr>

                }
            </table>

        </div>

    </div>

    
    @await Html.PartialAsync("_CreateItem", "Actors")


</div>
